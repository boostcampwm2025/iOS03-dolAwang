      output_name: "mirroringBooth.ipa",
      clean: true
    )

    appbox(
      emails: emails,
      message: "MirroringBooth - ê°œë°œìš© ë¹Œë“œ {BUILD_VERSION}({BUILD_NUMBER}) ì¤€ë¹„ ì™„ë£Œ ğŸš€",
      keep_same_link: true
